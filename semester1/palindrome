// the aim of this project is to check if a word is a palindrome and print out relevant info to inform the user of the result

public class Palindrome
{
	public static void main (String[] args)
	{
		String text = new String("navan");
		int lenght=text.length();
		text=text.toUpperCase();
		String palindrome= new String("");

	    for(int i= text.length()-1; i>=0; i--){
	    	palindrome = palindrome+text.charAt(i);
	    }

	    if(text.equals(palindrome) ==true)
	    {
	    	System.out.println(text + " is a palindrome");

	    }
	    else
	    {
	    	System.out.println(text + " is NOT a palindrome");
	    }
	}

}
